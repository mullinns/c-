задание 2. 

#include <iostream>
using namespace std;

int main ()
{
    int k = 0;
    string previous;
    cin >> previous;
    string current;
    while (cin >> current) {
        ++k;
        if (previous == current)
            cout << "Word " << previous << " is repeating on position " << k << '\n';
    }
    return 0;
}

Задание 3. 

#include <iostream>
using namespace std;

int main ()
{
    cout << "Enter a number:\n";
    int numb;
    cin >> numb;
    int i = 0;
    int d = numb;
    int r = 1;
    while (d >= 1 && r <= 1){
        r = d % 10;
        d = d / 10;
        i = i + 1;
    }
    int two = 1;
    int sum = 0;
    d = numb;
    while (i > 0){
        r = d % 10;
        d = d / 10;
        sum = sum + r * two;
        two = two * 2;
        i = i - 1;
    }
    cout << sum;
    return 0;
}

Задание 4. 


#include<iostream>
using namespace std;


int main(){

    int n10 = 0, n2 = 0, r = 1;
    cout << "Enter a number:" << endl;
    cin >> n10;
    while(n10)
    {
        n2 += (n10%2) * r;
        n10 = n10 / 2;
        r = r * 10;
    }
    cout << n2;
    return 0;
}
